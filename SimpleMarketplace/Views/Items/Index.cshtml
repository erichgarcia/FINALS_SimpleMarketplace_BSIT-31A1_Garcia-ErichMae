@model IEnumerable<SimpleMarketplace.Models.Item>
@{
    ViewData["Title"] = "Browse Items";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-success">Post New Item</a>
    }
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by title or description..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-4">
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(ViewBag.SelectedCategoryId == category.Id)">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No items available</h4>
        <p>There are currently no items for sale. Be the first to post an item!</p>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <hr>
            <a asp-action="Create" class="btn btn-primary">Post an Item</a>
        }
        else
        {
            <hr>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register to Post Items</a>
        }
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageFileName))
                    {
                        <img src="~/images/items/@item.ImageFileName" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }
                    <div class="card-body">
                        @if (item.Category != null)
                        {
                            <span class="badge bg-secondary mb-2">@item.Category.Name</span>
                        }
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-success">$@item.Price.ToString("F2")</h6>
                        <p class="card-text">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Posted by @item.Seller.FullName<br />
                                @item.DatePosted.ToLocalTime().ToString("MMM dd, yyyy")
                            </small>
                        </p>
                        @if (item.InterestedBuyers.Any())
                        {
                            <p class="card-text">
                                <small class="text-info">@item.InterestedBuyers.Count interested buyer(s)</small>
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
