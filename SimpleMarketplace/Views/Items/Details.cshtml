@model SimpleMarketplace.Models.Item
@{
    ViewData["Title"] = "Item Details";
    var isOwner = ViewBag.UserId == Model.SellerId;
}

<div class="row">
    <div class="col-md-8">
        <h1>@Model.Title</h1>
        <h3 class="text-success mb-4">$@Model.Price.ToString("F2")</h3>
        
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Seller Information</h5>
                <p class="card-text">
                    <strong>Name:</strong> @Model.Seller.FullName<br />
                    <strong>Email:</strong> @Model.Seller.Email<br />
                    <strong>Posted:</strong> @Model.DatePosted.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")
                </p>
            </div>
        </div>

        @if (isOwner && Model.InterestedBuyers.Any())
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Interested Buyers (@Model.InterestedBuyers.Count)</h5>
                    <div class="list-group">
                        @foreach (var interest in Model.InterestedBuyers)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@interest.Buyer.FullName</h6>
                                    <small>@interest.DateMarked.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                </div>
                                <p class="mb-1">@interest.Buyer.Email</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    if (isOwner)
                    {
                        <p class="text-muted">This is your item</p>
                        @if (!Model.IsSold)
                        {
                            <form asp-action="MarkAsSold" asp-route-id="@Model.Id" method="post" class="mb-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100" onclick="return confirm('Mark this item as sold?')">Mark as Sold</button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info">This item is sold</div>
                        }
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this item?')">Delete Item</button>
                        </form>
                    }
                    else
                    {
                        @if (ViewBag.HasMarkedInterest == true)
                        {
                            <div class="alert alert-success">You have marked interest in this item!</div>
                            <form asp-action="RemoveInterest" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-secondary w-100">Remove Interest</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="MarkInterest" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary w-100">Mark Interest</button>
                            </form>
                            <small class="form-text text-muted mt-2 d-block">
                                Mark your interest to let the seller know you're interested in buying this item.
                            </small>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <p>Please log in to mark your interest in this item.</p>
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Details", new { id = Model.Id })" class="btn btn-primary btn-sm">Log In</a>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to Browse</a>
        </div>
    </div>
</div>
